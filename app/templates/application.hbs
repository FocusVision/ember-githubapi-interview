<main>
  <div class='content'>
    {{filter}}
    <div class='list-header'>
      {{input
        type='text'
        placeholder='Type here...'
        query=query
        value=(mut filter)
        key-up=(action 'updateFilter')
      }}
    </div>
    <div class='list'>
      {{#each model as |user|}}
        <div class='list-item'>
          <img
            class='list-avatar'
            src={{user.avatarUrl}}
          />
          {{user.login}}
        </div>
      {{else}}
        <div class='list-empty'>
          hmm, nothin' here
        </div>
      {{/each}}
    </div>
  </div>
</main>
